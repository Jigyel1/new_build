<h1 class="font-size--50">New Build Invitation</h1>
<p class="color--primary titleCase"><%= t("devise.mailer.invitation_instructions.hello_user", lastname: @resource.lastname) %></p>

<p class="line-height--22">
  <%= t('devise.mailer.invitation_instructions.description') %>
</p>

<div class="text-align--center my-32">
  <a href="<%= root_url %>">
    <button type="button" class="button button__primary"><%= t('devise.mailer.invitation_instructions.button_text') %></button>
  </a>
</div>

<p class="line-height--22">
  <% if @resource.invitation_due_at %>
    <%= t(
          "devise.mailer.invitation_instructions.accept_until",
          due_date: l(
            @resource.invitation_due_at,
            format: :'devise.mailer.invitation_instructions.accept_until_format'
          )
        ) %>
  <% end %>
</p>
