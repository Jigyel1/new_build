<table class="full--width">
  <tr>
    <td>
      <div class="logo mb-32">
        <%= image_tag(attachments['logo.png'].url) %>
      </div>
    </td>
  </tr>
  <tr>
    <td>
        <h2 class="my-0">New Build Invitation</h2>
    </td>
  </tr>
  <tr>
    <td>
        <p class="color--black-87 mb-16 font--bold text--capitalize  font-size-16">Hello <%= @user.profile.salutation %>. <%= @user.lastname.capitalize! %></p>
    </td>
  </tr>
  <tr>
    <td>
      <p class="my-0"><%= t('devise.mailer.invitation_instructions.description') %></p>
    </td>
  </tr>
  <tr>
    <td>
      <div class="my-32">
        <button type="button" class="button button__primary">
          <a href="<%= root_url %>" class="color--white font-size-12">
            <%= t('devise.mailer.invitation_instructions.button_text') %>
          </a>
        </button>
      </div>
    </td>
  </tr>
  <tr>
    <td>
      <p class="mt-0">
        <% if @resource.invitation_due_at %>
          <%= t(
                "devise.mailer.invitation_instructions.accept_until",
                due_date: l(
                  @resource.invitation_due_at,
                  format: :'devise.mailer.invitation_instructions.accept_until_format'
                )
              ) %>
        <% end %></p>
    </td>
  </tr>
  <tr>
    <td>
      <p class="my-0">If you are having trouble visiting the page from this button, please copy paste the link
        below in your browser: <a href="<%= root_url %>" class="color--primary"><%= root_url %></a></p>
    </td>
  </tr>
</table>
