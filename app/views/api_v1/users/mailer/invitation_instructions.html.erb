<p><%= t("devise.mailer.invitation_instructions.hello", lastname: @resource.lastname) %></p>

<%= t('devise.mailer.invitation_instructions.description') %>

<p>
  <a href="<%= root_url %>auth/invitation?invitation_token=<%= @token %>">
    <button type="button"><%= t('devise.mailer.invitation_instructions.button_text') %></button>
  </a>
</p>

<% if @resource.invitation_due_at %>
  <%= t(
        "devise.mailer.invitation_instructions.accept_until",
        due_date: l(
          @resource.invitation_due_at,
          format: :'devise.mailer.invitation_instructions.accept_until_format'
        )
      ) %>
<% end %>

<%= t('devise.mailer.trouble_text') %>

<p><%= t('devise.mailer.signature') %></p>