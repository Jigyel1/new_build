<p class="font-size-18 color--black-87 mb-24"><%= I18n.t('pdf.project.hfc_or_ftth.hfc_title') %></p>
<div class="flex--row mb-24">
  <div class="width--50">
    <p class="font-size-16 color--black-60 mb-8"><%= I18n.t('pdf.project.hfc_or_ftth.connection_cost') %></p>
    <p class="font-size-14 color--black-87">CHF <%= hfc&.project_connection_cost %></p>
  </div>
  <div class="width--50">
    <% if project.installation_detail.try(:sockets).present? %>
      <p class="font-size-16 color--black-60 mb-8"><%= I18n.t('pdf.project.hfc_or_ftth.socket_installation') %></p>
      <p class="font-size-14 color--black-87">CHF <%= hfc&.socket_installation_cost %></p>
    <% end %>
  </div>
</div>

<div class="flex--row mb-24">
  <div class="width--50">
    <p class="font-size-16 color--black-60 mb-8"><%= I18n.t('pdf.project.hfc_or_ftth.build_cost') %></p>
    <p class="font-size-14 color--black-87">CHF <%= hfc&.build_cost %></p>
  </div>
  <div class="width--50">
    <p class="font-size-16 color--black-60 mb-8"><%= I18n.t('pdf.project.hfc_or_ftth.hfc_lease_cost') %></p>
    <p class="font-size-14 color--black-87">CHF <%= hfc&.lease_cost %></p>
  </div>
</div>

<div class="flex--row mb-24">
  <div class="width--50">
    <p class="font-size-14 color--black-87"><%= I18n.t('pdf.project.hfc_or_ftth.payback') %> <%= hfc_payback %></p>
  </div>

  <%= render('pdf/shared/default_icon', system_generated: hfc&.system_generated_payback_period) %>
</div>