<p class="font-size-18 color--black-87 mb-24"><%= I18n.t('pdf.project.hfc_or_ftth.ftth_title') %></p>

<div class="flex--row mb-24">
  <div class="width--40">
    <p class="font-size-16 color--black-60 mb-8"><%= I18n.t('pdf.project.hfc_or_ftth.connection_cost') %></p>
    <p class="font-size-14 color--black-87">CHF <%= ftth&.project_connection_cost %></p>
  </div>
  <div class="width--60">
    <% if project.installation_detail.try(:sockets).present? %>
      <p class="font-size-16 color--black-60 mb-8"><%= I18n.t('pdf.project.hfc_or_ftth.connection_cost') %></p>
      <p class="font-size-14 color--black-87">CHF <%= ftth&.socket_installation_cost %></p>
    <% end %>
  </div>
</div>

<div class="flex--row mb-24">
  <div class="width--40">
    <p class="font-size-16 color--black-60 mb-8"><%= I18n.t('pdf.project.hfc_or_ftth.build_cost') %></p>
    <p class="font-size-14 color--black-87">CHF <%= ftth&.build_cost %></p>
  </div>
  <div class="width--50">
    <p class="font-size-16 color--black-60 mb-8"><%= I18n.t('pdf.project.hfc_or_ftth.ftth_lease_cost', years: ftth_payback_in_years) %></p>
    <p class="font-size-14 color--black-87">CHF <%= ftth&.lease_cost %></p>
  </div>
</div>

<div class="flex--row mb-24">
  <div class="width--40">
    <p class="font-size-14 color--black-87"><%= I18n.t('pdf.project.hfc_or_ftth.payback') %> <%= ftth_payback %></p>
  </div>
  <div class="width--60">
  <%= render('pdf/shared/default_icon', system_generated: ftth&.system_generated_payback_period) %>
  </div>
</div>
